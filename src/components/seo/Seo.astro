---
import siteData from "../../data/siteData.json";
import jsonLDGenerator from "../../utils/jsonLD";

type Props = {
  title: string;
  description: string;
  url: string;
  image?: { src: string; alt: string };
  robots?: boolean;
  frontmatter?: any;
};

const {
  title,
  description,
  url = Astro.url,
  image,
  frontmatter,
  robots,
} = Astro.props;

// Generate JSON-LD
const jsonLD = jsonLDGenerator({
  type: frontmatter ? "post" : "website",
  post: frontmatter,
  url,
});

// Host image locally (fallback to default site image)
const ogImage = image?.src || "/og.png"; // Local path
const ogImageAlt = image?.alt || siteData.image.alt;
---

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content="Site Name" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:alt" content={ogImageAlt} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={ogImage} />
<meta name="twitter:image:alt" content={ogImageAlt} />
<meta name="twitter:domain" content={import.meta.env.SITE} />

{robots && <meta name="robots" content="noindex, nofollow" />}

<!-- JSON-LD -->
<Fragment set:html={jsonLD} />

---
type Props = {
  index: number;
  title: string;
  description: string;
};

const { index, title, description } = Astro.props;
---

<div
  class="faq__item bg-[#F3F3F3] w-full mb-[30px] rounded-[45px] border border-dark shadow-[0px_5px_0px_#191a23]"
>
  <div class="flex items-center justify-between p-[60px] pb-0">
    <div class="flex items-center gap-[25px]">
      <span class="hidden sm:block sm:text-6xl text-gray-600">0{index}</span>
      <h3 class="text-2xl font-bold m-0">{title}</h3>
    </div>
    <!-- Static icon (no toggle functionality) -->

  </div>
  
  <!-- Always visible content -->
  <div class="px-[60px] pt-5">
    <div class="w-full h-[2px] bg-black mb-5"></div>
    <p class="prose mb-4 max-w-full pb-[60px] text-lg leading-relaxed">
      {description}
    </p>
  </div>
</div>

<style>
  .static-icon {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .horizontal-line,
  .vertical-line {
    position: absolute;
    background-color: black;
    transition: all 0.3s ease;
  }

  .horizontal-line {
    width: 100%;
    height: 6px;
    left: 0;
    top: calc(50% - 3px);
  }

  .vertical-line {
    width: 6px;
    height: 100%;
    left: calc(50% - 3px);
    top: 0;
  }

  /* Optional: Add hover effect for visual feedback */
  .faq__item:hover .horizontal-line,
  .faq__item:hover .vertical-line {
    background-color: #333;
  }
</style>
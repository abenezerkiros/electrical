---
const menuitems = [
  { href: '/', label: 'About us' },
  { href: '/', label: 'Services' },
  { href: '/', label: 'Use Cases' },
  { href: '/', label: 'Pricing' },
  { href: '/', label: 'Blog'},
];

const navButton = { href: '', label: 'Contact Us' };
---

<div class="mt-20">
  <nav class="w-full top-0 left-0 z-50 fixed bg-white">
    <header class="flex flex-col lg:flex-row justify-between items-center my-5 px-6 md:px-32">
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img src="/logo.png" class="h-12" alt="Logo" />
        </a>
        
        <!-- Mobile Menu Toggle -->
        <details class="lg:hidden relative group">
          <summary class="list-none cursor-pointer w-8 h-8 flex items-center justify-center">
            <!-- Hamburger Icon (visible when closed) -->
            <svg class="open-icon w-8 h-8 text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <!-- Close Icon (hidden when closed) -->
            <svg class="close-icon w-8 h-8 text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" style="display: none;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </summary>
          
          <!-- Mobile Menu Dropdown -->
          <div class="absolute right-0 top-full mt-2 w-64 bg-white border border-gray-200 rounded-lg shadow-lg z-50">
            <ul class="font-medium flex flex-col p-4 space-y-2">
              {menuitems.map((item, index) => (
                <li>
                  <a 
                    href={item.href} 
                    class="block py-3 px-4 text-black rounded-lg hover:bg-gray-100 transition-colors"
                  >
                    {item.label}
                  </a>
                </li>
              ))}
              <li class="pt-2 border-t border-gray-200 mt-2">
                <a 
                  class="w-full px-6 py-4 rounded-2xl border border-zinc-900 bg-white hover:bg-black text-black hover:text-white inline-flex justify-center transition-colors" 
                  href={navButton.href}
                >
                  <span class="text-center text-lg font-normal leading-6">{navButton.label}</span>
                </a>
              </li>
            </ul>
          </div>
        </details>
      </div>
      
      <!-- Desktop Menu -->
      <nav class="hidden lg:flex lg:w-auto lg:mt-0 lg:items-center lg:space-x-8">
        <ul class="font-medium flex flex-row space-x-8">
          {menuitems.map((item, index) => (
            <li>
              <a 
                href={item.href} 
                class="block py-2 px-3 text-black hover:text-gray-600 transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Desktop Contact Button -->
      <div class="hidden lg:block">
        <a class="px-9 py-5 rounded-2xl border border-zinc-900 bg-white hover:bg-black text-black hover:text-white inline-flex transition-colors" href={navButton.href}>
          <span class="text-center text-xl font-normal leading-7">{navButton.label}</span>
        </a>
      </div>
    </header>
  </nav>
</div>

<style is:inline>
  /* Hide the default details marker */
  details > summary {
    list-style: none;
  }
  details > summary::-webkit-details-marker {
    display: none;
  }
  
  /* Show close icon when details is open */
  details[open] .open-icon {
    display: none;
  }
  
  details[open] .close-icon {
    display: block !important;
  }
  
  /* Smooth animations for the dropdown */
  details .absolute {
    animation: fadeIn 0.2s ease-in-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>